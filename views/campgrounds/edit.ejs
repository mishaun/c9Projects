<% include ../partials/header %>

<div class="container">
    
    <h1 style = "text-align: center;">Edit <%= campground.name %></h1>
    
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type = "text" value = "<%= campground.name %>" name = "campground[name]">
            </div>
                        <div class="form-group">
                <input class="form-control" type = "number" placeholder = "Price" name = "campground[price]" value= <%= campground.price %> >
            </div>
            
            <div class="form-group">
                <input class="form-control" type = "text" value = <%=campground.img%> name = "campground[img]"> 
            </div>
            
            <div class="form-group">
                <input class="form-control" type = "text" value = "<%= campground.descript%>" name = "campground[descript]"> 
            </div>
            
            <div class="form-group">
            <button class ="btn btn-large btn-success btn-block ">Edit</button>
            </div>
        </form>
    
        <a href="/campgrounds">Back To Campgrounds</a>
        
    </div>
    

    
    <% include ../partials/footer %>
        
    
</div>
