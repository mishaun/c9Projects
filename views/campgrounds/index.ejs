<% include ../partials/header %>

<div class = "container">
    
    <header class = "jumbotron">
        <div class="container">
        
            <h1>Welcome to YelpCamp</h1>
            
            <p>View Our Handpicked Campgrounds All Over The World</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add new campground</a>
            </p>
      
        </div>
    
    </header>


    
    
    <div class = "row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail index">
                    <img  src="<%=campground.img%>"> 
                    
                    <div class = "caption">
                        <h5><%= campground.name %></h5>
                    </div>
                    <p><a class = "btn btn-small btn-primary"href="/campgrounds/<%=campground._id %>">More Detail</a></p>
                </div>
            </div>
        <% }); %>
    </div>



    <% include ../partials/footer %>
    
 </div>    
    

